


<div class="row"> 
  <div class="span6 offset1"><p>
    <h3><%= @results["Title"] %> (<%= @results["Year"] %>)</h3>
    <p>
    Release Date: <%= @results["Released"] %>
    <p>
    Genre: <%= @results["Genre"] %>
    <p>
    Rated: <%= @results["Rated"] %>
    <p>
    Runtime: <%= @results["Runtime"] %>
    <p>
    Directed by: <%= @results["Director"] %>
    <p>
    Starring: <%= @results["Actors"] %>
    <p>
    Written by: <%= @results["Writer"] %>
    <p>
    Plot Summary: <%= @results["Plot"] %>
  </div>
