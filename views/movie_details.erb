<div class="row">
  <div class="span5 offset1 ratings">
      <p>      <h4>IMDB Rating: 
<% if @results["imdbRating"] < "5" %> 
        <div id ="bad"><%= @results["imdbRating"] %></div>
<% elsif @results["imdbRating"] > "5" %>
        <div id = "good"><%= @results["imdbRating"] %></div>
<%end%>
      </h4>
  </div>
  

  <div class="span5 offset1 ratings">
      <p>
      <h4>Rotten Tomatoes: 
<% if @results["tomatoMeter"] < "50%" %> 
        <div id ="bad"><%= @results["tomatoMeter"] %>% Fresh</div>
<% elsif @results["tomatoMeter"] > "50%" %>
        <div id = "good"><%= @results["tomatoMeter"] %>% Fresh</div>
<%end%>
      </h4>
  </div>
</div>



